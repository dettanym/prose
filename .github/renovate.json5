{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "docker:pinDigests",
    ":automergeDigest",
    ":automergeBranch",
    ":semanticCommits",
    ":prConcurrentLimit10",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  schedule: ["every tuesday"],
  flux: {
    fileMatch: ["evaluation/kubernetes/.+\\.ya?ml$"],
  },
  "helm-values": {
    fileMatch: ["evaluation/kubernetes/.+\\.ya?ml$"],
  },
  kubernetes: {
    fileMatch: ["evaluation/kubernetes/.+\\.ya?ml$"],
  },
  ignorePaths: [
    // default set
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    // custom extra
    ".archive/**",
  ],
  packageRules: [
    {
      description: "Flux images and tags",
      groupName: "Flux",
      matchPackagePatterns: ["fluxcd"],
      matchDatasources: ["docker", "github-tags"],
      versioning: "semver",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      pinDigests: false,
      separateMinorPatch: true,
    },
  ],
}
